<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Artpieces

    <a data-toggle="collapse" href="#artist_artpieces_new_form">
      Add artpiece
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @artist.artpieces.each do |artpiece| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to artpiece, artpiece %>

        <%= link_to artpiece, method: :delete, data: { confirm: "Do you really want to delete this artpiece" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="artist_artpieces_new_form">
        <%= render partial: "artists/artist_artpieces_new_form" %>
      </div>
    </div>

  </ul>
</div>
