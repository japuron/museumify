<%= form_with(model: @artpiece, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :title %>

    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :year %>

    <%= f.text_field :year, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :artistic_movement %>

    <%= f.text_field :artistic_movement, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>

    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>

    <%= f.file_field :image, class: "form-control" %>
  </div>

  <%= f.hidden_field :artist_id, value: @artist.id %>

  <div class="form-group">
    <%= f.label :museum_id %>

    <%= f.collection_select :museum_id, Museum.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create artpiece", class: "btn btn-block btn-outline-secondary" %>
<% end %>
