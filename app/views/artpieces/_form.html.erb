<% was_validated = artpiece.errors.any? %>

<%= form_with(model: artpiece, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% title_class = "form-control" %>
    <% title_was_invalid = artpiece.errors.include?(:title) %>

    <% if was_validated %>
      <% if title_was_invalid %>
        <% title_class << " is-invalid" %>
      <% else %>
        <% title_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :title %>
    <%= f.text_field :title, class: title_class, placeholder: "Enter title" %>
    <% if title_was_invalid %>
      <% artpiece.errors.full_messages_for(:title).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% year_class = "form-control" %>
    <% year_was_invalid = artpiece.errors.include?(:year) %>

    <% if was_validated %>
      <% if year_was_invalid %>
        <% year_class << " is-invalid" %>
      <% else %>
        <% year_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :year %>
    <%= f.number_field :year, class: year_class, placeholder: "Enter year" %>
    <% if year_was_invalid %>
      <% artpiece.errors.full_messages_for(:year).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% artistic_movement_class = "form-control" %>
    <% artistic_movement_was_invalid = artpiece.errors.include?(:artistic_movement) %>

    <% if was_validated %>
      <% if artistic_movement_was_invalid %>
        <% artistic_movement_class << " is-invalid" %>
      <% else %>
        <% artistic_movement_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :artistic_movement %>
    <%= f.text_field :artistic_movement, class: artistic_movement_class, placeholder: "Enter artistic movement" %>
    <% if artistic_movement_was_invalid %>
      <% artpiece.errors.full_messages_for(:artistic_movement).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% description_class = "form-control" %>
    <% description_was_invalid = artpiece.errors.include?(:description) %>

    <% if was_validated %>
      <% if description_was_invalid %>
        <% description_class << " is-invalid" %>
      <% else %>
        <% description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :description %>
    <%= f.text_field :description, class: description_class, placeholder: "Enter description" %>
    <% if description_was_invalid %>
      <% artpiece.errors.full_messages_for(:description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% image_class = "form-control" %>
    <% image_was_invalid = artpiece.errors.include?(:image) %>

    <% if was_validated %>
      <% if image_was_invalid %>
        <% image_class << " is-invalid" %>
      <% else %>
        <% image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
    <% if image_was_invalid %>
      <% artpiece.errors.full_messages_for(:image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% artist_class = "form-control" %>
    <% artist_was_invalid = artpiece.errors.include?(:artist) %>

    <% if was_validated %>
      <% if artist_was_invalid %>
        <% artist_class << " is-invalid" %>
      <% else %>
        <% artist_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :artist_id %>
    <%= f.collection_select :artist_id, Artist.all, :id, :to_s, {}, class: "form-control" %>
    <% if artist_was_invalid %>
      <% artpiece.errors.full_messages_for(:artist).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% museum_class = "form-control" %>
    <% museum_was_invalid = artpiece.errors.include?(:museum) %>

    <% if was_validated %>
      <% if museum_was_invalid %>
        <% museum_class << " is-invalid" %>
      <% else %>
        <% museum_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :museum_id %>
    <%= f.collection_select :museum_id, Museum.all, :id, :to_s, {}, class: "form-control" %>
    <% if museum_was_invalid %>
      <% artpiece.errors.full_messages_for(:museum).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
