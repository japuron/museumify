<!-- Form like end -->

  <!-- Label and input for artpiece_id start -->
  <div class="form-group">
    <%= f.label :artpiece_id %>

    <!-- Input for artpiece_id start -->
    <%= f.collection_select :artpiece_id, Artpiece.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for artpiece_id end -->
  </div>
  <!-- Label and input for artpiece_id end -->

  <!-- Label and input for liker_id start -->
  <!-- Input for liker_id start -->
  <%= f.hidden_field :liker_id, value: @user.id %>
