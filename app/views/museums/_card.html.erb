<div class="card mb-3">
  <h2 class="card-header h4">
    Museum #<%= museum.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <!-- Display name start -->
      <dd><%= museum.name %></dd>
      <!-- Display name end -->

      <dt>Location</dt>
      <!-- Display location start -->
      <dd><%= museum.location %></dd>
      <!-- Display location end -->

      <dt>Description</dt>
      <!-- Display description start -->
      <dd><%= museum.description %></dd>
      <!-- Display description end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back museum, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link museum start -->
      <div class="col">
        <%= link_to edit_museum_url(museum), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link museum end -->

      <!-- Delete link museum start -->
      <div class="col">
        <%= link_to museum, method: :delete, data: { confirm: "Do you really want to delete this museum?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link museum end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(museum.updated_at) %> ago
  </div>
</div>
