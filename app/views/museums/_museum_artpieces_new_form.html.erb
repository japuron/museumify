<!-- Form artpiece start -->
<%= form_with(model: @artpiece, local: true) do |f| %>
<!-- Form artpiece end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <%= f.label :title %>

    <!-- Input for title start -->
    <%= f.text_field :title, class: "form-control" %>
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for year start -->
  <div class="form-group">
    <%= f.label :year %>

    <!-- Input for year start -->
    <%= f.text_field :year, class: "form-control" %>
    <!-- Input for year end -->
  </div>
  <!-- Label and input for year end -->

  <!-- Label and input for artistic_movement start -->
  <div class="form-group">
    <%= f.label :artistic_movement %>

    <!-- Input for artistic_movement start -->
    <%= f.text_field :artistic_movement, class: "form-control" %>
    <!-- Input for artistic_movement end -->
  </div>
  <!-- Label and input for artistic_movement end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>

    <!-- Input for description start -->
    <%= f.text_field :description, class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for image start -->
  <div class="form-group">
    <%= f.label :image %>

    <!-- Input for image start -->
    <%= f.file_field :image, class: "form-control" %>
    <!-- Input for image end -->
  </div>
  <!-- Label and input for image end -->

  <!-- Label and input for artist_id start -->
  <div class="form-group">
    <%= f.label :artist_id %>

    <!-- Input for artist_id start -->
    <%= f.text_field :artist_id, class: "form-control" %>
    <!-- Input for artist_id end -->
  </div>
  <!-- Label and input for artist_id end -->

  <!-- Label and input for museum_id start -->
  <!-- Input for museum_id start -->
  <%= f.hidden_field :museum_id, value: @museum.id %>
  <!-- Input for museum_id end -->
  <!-- Label and input for museum_id end -->

  <%= f.submit "Create artpiece", class: "btn btn-block btn-outline-secondary" %>
<% end %>
