<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Artpieces

    <a data-toggle="collapse" href="#museum_artpieces_new_form">
      Add artpiece
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @museum.artpieces.each do |artpiece| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to artpiece, artpiece %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to artpiece, method: :delete, data: { confirm: "Do you really want to delete this artpiece" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="museum_artpieces_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
